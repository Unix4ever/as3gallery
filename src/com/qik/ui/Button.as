package com.qik.ui {		import flash.display.MovieClip;	import flash.events.MouseEvent;			public class Button extends MovieClip {		private var _rolledOver:Boolean = false;				public function Button() {			stop();			addEventListener(MouseEvent.MOUSE_OVER, onMouseEvent);			addEventListener(MouseEvent.MOUSE_OUT, onMouseEvent);			addEventListener(MouseEvent.MOUSE_DOWN, onMouseEvent);			addEventListener(MouseEvent.MOUSE_UP, onMouseEvent);		}				private function onMouseEvent(event:MouseEvent):void{			var label:String;						switch(event.type){				case MouseEvent.MOUSE_OVER:					label = "over";					_rolledOver = true;					break;				case MouseEvent.MOUSE_OUT:					label = "normal";					_rolledOver = false;					break;				case MouseEvent.MOUSE_DOWN:					label = "hit";					break;				case MouseEvent.MOUSE_UP:					label = "over";					break;			}						gotoAndStop(label);		}	}	}