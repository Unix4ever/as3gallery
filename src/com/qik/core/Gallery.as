package  com.qik.core {	import com.qik.ui.ThubnailItemFactory;  import com.qik.data.DataProvider;  import com.qik.events.GalleryViewEvent;  import com.qik.ui.Button;  import com.qik.ui.List;  import flash.display.MovieClip;  import flash.events.MouseEvent;  public class Gallery extends MovieClip {		public var refresh:Button;		public var share:Button;		public var list:List;				private var _folderPath:String;		private var _controller:MainController;		private var _images:DataProvider = new DataProvider();				public function Gallery() {      _controller = new MainController(this);      share.addEventListener(MouseEvent.CLICK, onClickShare);			refresh.addEventListener(MouseEvent.CLICK, onClickRefresh);						list.setItemRenderer(new ThubnailItemFactory());			list.setDataProvider(_images);		}				public function get folderPath():String {      return _folderPath;    }        public function set folderPath(value:String):void {      _folderPath = value;    }        public function showThumbnails(images:Array):void {    	_images.clear();    	    	var len:uint = images.length;    	for(var i:uint = 0; i < len; i++){    		_images.addItem(images[i]);    	}    }    private function onCompleteFolderSelectDialog():void{			dispatchEvent(new GalleryViewEvent(GalleryViewEvent.CHANGE_FOLDER));    }        private function onClickRefresh(event:MouseEvent):void{    	dispatchEvent(new GalleryViewEvent(GalleryViewEvent.LOAD_THUMBNAILS));    }				private function onClickShare(event:MouseEvent):void{					}  }}